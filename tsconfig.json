{
    "compilerOptions": {
        "moduleResolution": "node",
        "outDir": "./build/",
        "sourceRoot": "./src",
        "sourceMap": true,
        "declaration": true,
        "module": "es6",
        "target": "es5",
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "preserveSymlinks": true
    },
    "types": ["node"],
    "exclude": ["node_modules", "**/node_modules/*", "build", "examples"]
}
