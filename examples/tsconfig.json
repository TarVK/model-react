{
    "compilerOptions": {
        "moduleResolution": "node",
        "outDir": "./build/",
        "sourceMap": true,
        "module": "es6",
        "target": "es5",
        "jsx": "react",
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "preserveSymlinks": true
    },
    "types": ["node", "@emotion/core"],
    "exclude": ["node_modules", "**/node_modules/*", "build"]
}
